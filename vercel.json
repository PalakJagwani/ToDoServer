{
    "version": 2,
    "name": "Todo-App",
    "builds": [
        { "src": "app.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "/index.js" }
    ],
    "headers" : [
        {
        "source" : "/(.*)",

        "headers" : [
        {
            "key" : "Access-Control-Allow-Origin",
            "value" : "http://localhost:5174/"
        },
        {
            "key" : "Access-Control-Allow-Origin",
            "value" : "GET, PUT, POST, DELETE"
        },
        {
            "key" : "Access-Control-Allow-Origin",
            "value" : "Content-Type, Authorization"
        }
        ]
        }
    ]
}